<% @products.each do |product| %>
  <%= image_tag(product.image_url, height: "150") %>
  <%= product.name %>
  <%= product.description %>
  <%= number_to_currency product.max_bid %>
  <% if current_user %>
    <%= form_tag do %>
      <%= number_tag "bids[amount]" %>
      <%= submit_tag "Ofertar", class: "btn btn-primary" %>
    <% end %>
  <% else %>
    <%= link_to "RegÃ­strate para poder ofertar", new_registration_path(:user), class: "btn btn-primary" %>
  <% end %>
<% end %>
